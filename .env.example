# KHVD 2025 Exhibition - Environment Variables Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control!

# Domain Configuration
# For production: use your actual domains
# For local development: use localhost
PRIMARY_DOMAIN=khvd.kr
DOMAINS=khvd.kr,2025.khvd.kr
SSL_EMAIL=your-email@example.com

# Application Configuration
# Update ORIGIN based on your primary domain
ORIGIN=https://khvd.kr

# MySQL/MariaDB Database Configuration
# For Docker deployment: use 'mariadb' (Docker container service name)
# For local development: use 'localhost'
DB_HOST=mariadb
DB_PORT=3306
DB_USER=khvd_user
DB_PASSWORD=your_secure_password_here
DB_NAME=khvd_2025
DB_CONNECTION_LIMIT=10
