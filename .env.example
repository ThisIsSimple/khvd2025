# KHVD 2025 Exhibition - Environment Variables Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control!

# Domain Configuration
# For production: use your actual domain (e.g., khvd2025.com)
# For local development: use localhost
DOMAIN=localhost
SSL_EMAIL=your-email@example.com

# Application Configuration
# Update ORIGIN based on your domain
ORIGIN=https://localhost

# MySQL/MariaDB Database Configuration
# For Docker deployment: use 'mariadb' (Docker container service name)
# For local development: use 'localhost'
DB_HOST=mariadb
DB_PORT=3306
DB_USER=khvd_user
DB_PASSWORD=your_secure_password_here
DB_NAME=khvd_2025
DB_CONNECTION_LIMIT=10
